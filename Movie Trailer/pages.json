{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "IMAX电影预告",
				"app-plus":{
					"titleNView":false //禁用原生顶部导航栏(导航栏部分会被去掉，但是不能去掉微信导航栏)
					// 需要注意的是h5端节点没有配置默认使用app-plus下的配置，如果配置了h5节点则会覆盖掉app-plus的配置
				}
			}
		},
		{
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#3F536E",
		"backgroundColor": "#F0AD4E"
	},
	"tabBar":{
		"color":"#cdcdcd",
		"selectedColor":"#000000",
		"borderStyle":"black",
		"list":[
			{
				"pagePath":"pages/index/index",
				"iconPath":"static/tabBar/found.png",
				"selectedIconPath":"static/tabBar/found-copy.png",
				"text":"发现"
			},
			{
				"pagePath":"pages/search/search",
				"iconPath":"static/tabBar/search.png",
				"selectedIconPath":"static/tabBar/search-copy.png",
				"text":"搜索"
			},
			{
				"pagePath":"pages/my/my",
				"iconPath":"static/tabBar/my.png",
				"selectedIconPath":"static/tabBar/my-copy.png",
				"text":"我的"
			}
		]
	}
